FORK_LIB = -L$(FOAM_LIBBIN)/$(FOAM_MPI) -lICSFoam -lPstream \
            $(shell mpicxx --showme:link)
FORK_INC = -I$(REPO_ROOT)/ICSFoam/src/lnInclude \
            $(shell mpicxx --showme:compile)

EXE_INC = -std=c++14 -Wno-old-style-cast -DOPENFOAM \
    -I$(LIB_SRC)/finiteVolume/lnInclude \
    -I$(LIB_SRC)/meshTools/lnInclude \
    -I$(LIB_SRC)/Pstream/lnInclude \
    -I$(FOAM_USER_LIBBIN)/catch2/include \
    $(FORK_INC)
    
EXE_LIBS = \
    -lfiniteVolume \
    -lmeshTools \
    -L$(FOAM_USER_LIBBIN) \
    -L$(FOAM_USER_LIBBIN)/catch2/lib -l:libCatch2.a \
    $(FORK_LIB)
